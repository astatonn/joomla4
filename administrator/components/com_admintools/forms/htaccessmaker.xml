<form
        addfieldprefix="Akeeba\Component\AdminTools\Administrator\Field"
        addruleprefix="Akeeba\Component\AdminTools\Administrator\Rule"
>
    <fieldset name="basic_security"
              label="COM_ADMINTOOLS_HTACCESSMAKER_LBL_BASICSEC"
    >

        <field
                name="nodirlists"
                type="list"
