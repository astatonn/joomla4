<form addfieldprefix="Akeeba\Component\AdminTools\Administrator\Field">
    <fields name="filter">
        <field
                name="search"
                type="text"
                inputmode="search"
                label="JSEARCH_FILTER"
                hint="JSEARCH_FILTER"
        />

        <field
            name="since"
            type="calendar"
            label="COM_ADMINTOOLS_SCANS_LBL_SINCE"
            onchange="this.form.submit();"
        />

        <field
            name="until"
            type="calendar"
            label="COM_ADMINTOOLS_SCANS_LBL_UNTIL"
            onchange="this.form.submit();"
        />
    </fields>

    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="JGLOBAL_SORT_BY"
                statuses="*,0,1"
                onchange="this.form.submit();"
                default="id DESC"
                validate="options"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="id DESC">JGRID_HEADING_ID_DESC</option>
            <option value="scanstart ASC">JDATE_ASC</option>
            <option value="scanstart DESC">JDATE_DESC</option>
        </field>

        <field
                name="limit"
                type="limitbox"
                label="JGLOBAL_LIST_LIMIT"
                default="25"
                onchange="this.form.submit();"
        />
    </fields>
</form>